<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="282.0" maxWidth="270.0" minHeight="282.0" minWidth="270.0" prefHeight="282.0" prefWidth="270.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculatorapp.CalcController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <GridPane alignment="CENTER" hgap="5.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="280.0" prefWidth="250.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" onAction="#onPlusButtonClick" prefHeight="50.0" prefWidth="50.0" text="+" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onMinusButtonClick" prefHeight="50.0" prefWidth="50.0" text="-" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onMultiplicationButtonClick" prefHeight="50.0" prefWidth="50.0" text="*" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onNumButtonClick" prefHeight="50.0" prefWidth="50.0" text="7" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onDivisionButtonClick" prefHeight="50.0" prefWidth="50.0" text="/" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onNumButtonClick" prefHeight="50.0" prefWidth="50.0" text="8" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onNumButtonClick" prefHeight="50.0" prefWidth="50.0" text="9" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onNumButtonClick" prefHeight="50.0" prefWidth="50.0" text="4" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onNumButtonClick" prefHeight="50.0" prefWidth="50.0" text="5" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onNumButtonClick" prefHeight="50.0" prefWidth="50.0" text="6" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onNumButtonClick" prefHeight="50.0" prefWidth="50.0" text="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button ellipsisString="C" mnemonicParsing="false" onAction="#onCButtonClick" prefHeight="50.0" prefWidth="50.0" text="C" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onNumButtonClick" prefHeight="50.0" prefWidth="50.0" text="2" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onNumButtonClick" prefHeight="50.0" prefWidth="50.0" text="3" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onNumButtonClick" prefHeight="50.0" prefWidth="50.0" text="0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#onEqualButtonClick" prefHeight="50.0" prefWidth="50.0" text="=" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
                    <font>
                        <Font name="Verdana" size="20.0" />
                    </font>
                </Button>
                <TextField fx:id="input" alignment="CENTER_RIGHT" prefHeight="40.0" GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
               <font>
                  <Font name="Verdana" size="20.0" />
               </font></TextField>
            </children>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
            <cursor>
                <Cursor fx:constant="DEFAULT" />
            </cursor>
        </GridPane>
    </children>
</VBox>
